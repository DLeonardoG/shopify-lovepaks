<footer class="footer">
    <div class="container">
        <div class="footer-grid">
            <div class="footer-brand">
            {% if settings.logo != blank %}
                <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
            {% else %}
                <img src="{{ 'LOVE_1.png' | file_img_url: 'master' }}" alt="{{ shop.name }}">
            {% endif %}
                <p class="footer-description">
                    Love Brands presents Love Paks—the world's first rose quartz infused laundry detergent. Laundry care that's good for you and the planet.
                </p>
            </div>
            <div class="footer-section">
                <h4 class="footer-section-title">Products</h4>
                <div class="footer-links">
                    <a href="/pages/catalog" class="footer-link">Products</a>
                </div>
            </div>
            <div class="footer-section">
                <h4 class="footer-section-title">Company</h4>
                <div class="footer-links">
                    <a href="/collections/frontpage" class="footer-link">Home page</a>
                    <a href="/pages/how-it-works" class="footer-link">How It Works</a>
                    <a href="/pages/contact" class="footer-link">Contact</a>
                </div>
            </div>
            <div class="footer-section">
                <h4 class="footer-section-title">Support</h4>
                <div class="footer-links">
                    <a href="/pages/privacy-policy" class="footer-link">Privacy Policy</a>
                    <a href="/pages/shipping-policy" class="footer-link">Shipping Policy</a>
                    <a href="/pages/return-refund-policy" class="footer-link">Return & Refund Policy</a>
                    <a href="/pages/supply-agreement" class="footer-link">Supply Agreement</a>
                    <a href="/pages/ecommerce-agreement" class="footer-link">E-commerce Agreement</a>
                    <div id="appstle-subscription-manage-subscription-button-placeholder" class="footer-appstle-manage"></div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            © {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
        </div>
    </div>
</footer>

<!-- Back to Top Button -->
<button class="back-to-top" id="back-to-top" aria-label="Back to top">
    ↑
</button>

