<footer class="footer">
    <div class="container">
        <div class="footer-grid">
            <div class="footer-brand">
            {% if settings.logo != blank %}
                <a href="{{ routes.root_url }}">
                    <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
                </a>
            {% else %}
                <a href="{{ routes.root_url }}">
                    <img src="{{ 'LOVE_1.png' | file_img_url: 'master' }}" alt="{{ shop.name }}">
                </a>
            {% endif %}
                <p class="footer-description">
                    Love Brands presents Love Paks—the world's first rose quartz infused laundry detergent. Laundry care that's good for you and the planet.
                </p>
            </div>

            <div class="footer-section">
                <h4 class="footer-section-title">Products</h4>
                <div class="footer-links">
                    <a href="/pages/catalog" class="footer-link">Products</a>
                    <a href="/pages/become-an-ambassador" class="footer-link">Become an Ambassador</a>
                </div>
            </div>

            <div class="footer-section">
                <h4 class="footer-section-title">Company</h4>
                <div class="footer-links">
                    <a href="{{ routes.root_url }}" class="footer-link">Home</a>
                    <a href="{{ pages['how-it-works'].url }}" class="footer-link">How It Works</a>
                    <a href="/pages/contact" class="footer-link">Contact</a>

                    <div class="footer-contact-info">
                        <a href="mailto:support@lovepaks.com" class="footer-email">support@lovepaks.com</a>

                        <div class="footer-social-icons">
                            <a href="https://www.instagram.com/lovelaundrypaks?igsh=MWJwNnR3N2wzb2FlNQ==" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Instagram">
                                <!-- SVG Instagram -->
                            </a>

                            <a href="https://www.facebook.com/share/18gsvTPfWt/?mibextid=wwXIfr" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Facebook">
                                <!-- SVG Facebook -->
                            </a>

                            <a href="https://www.tiktok.com/@lovelaundrypaks?_r=1&_t=ZS-93oZHzT1Avt" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="TikTok">
                                <!-- SVG TikTok -->
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-section">
                <h4 class="footer-section-title">Support</h4>
                <div class="footer-links">
                    <a href="/pages/privacy-policy" class="footer-link">Privacy Policy</a>
                    <a href="/pages/shipping-policy" class="footer-link">Shipping Policy</a>
                    <a href="/pages/return-refund-policy" class="footer-link">Return & Refund Policy</a>

                    <div id="appstle-subscription-manage-subscription-button-placeholder" class="footer-appstle-manage"></div>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            © {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
        </div>
    </div>
</footer>

<button class="back-to-top" id="back-to-top" aria-label="Back to top">
    ↑
</button>
