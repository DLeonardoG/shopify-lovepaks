{% comment %}
  Science vs Myth Section
  Carousel of myth busters
{% endcomment %}

{% if product.metafields.custom.myths %}
  <section class="product-myths">
    <div class="container">
      <h2 class="section-title">Science vs Myth</h2>
      
      <div class="myths-carousel" id="myths-carousel">
        {% for myth in product.metafields.custom.myths %}
          <div class="myth-card">
            <span class="myth-number">{{ forloop.index }}</span>
            <h3 class="myth-title">Myth: {{ myth.title }}</h3>
            <p class="myth-truth">
              <strong>THE TRUTH:</strong> {{ myth.truth }}
            </p>
          </div>
        {% endfor %}
      </div>
      
      <div class="myths-navigation">
        <button class="myth-nav-btn prev" id="myth-prev" aria-label="Previous myth">‹</button>
        <button class="myth-nav-btn next" id="myth-next" aria-label="Next myth">›</button>
      </div>
      
      <div class="myths-dots" id="myths-dots"></div>
      
      <a href="/pages/the-science" class="learn-more-link">Learn More</a>
    </div>
  </section>
{% endif %}

<style>
.product-myths {
  padding: 60px 0;
  background: #f9f9f9;
}

.myths-carousel {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  gap: 30px;
  padding: 20px 0;
  scrollbar-width: none;
}

.myths-carousel::-webkit-scrollbar {
  display: none;
}

.myth-card {
  min-width: 100%;
  scroll-snap-align: start;
  background: white;
  padding: 40px;
  border-radius: 8px;
  position: relative;
}

.myth-number {
  position: absolute;
  top: 20px;
  right: 20px;
  font-size: 48px;
  font-weight: 800;
  color: #f0f0f0;
}

.myth-title {
  font-size: 24px;
  margin: 0 0 20px;
}

.myth-truth {
  font-size: 16px;
  line-height: 1.6;
  color: #666;
}

.myths-navigation {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 30px;
}

.myth-nav-btn {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 2px solid #333;
  background: white;
  font-size: 24px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.myth-nav-btn:hover {
  background: #333;
  color: white;
}

.learn-more-link {
  display: block;
  text-align: center;
  margin-top: 30px;
  color: #666;
  text-decoration: none;
}

.learn-more-link:hover {
  text-decoration: underline;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const carousel = document.getElementById('myths-carousel');
  const prevBtn = document.getElementById('myth-prev');
  const nextBtn = document.getElementById('myth-next');
  
  if (!carousel) return;
  
  const cards = carousel.querySelectorAll('.myth-card');
  let currentIndex = 0;
  
  function updateCarousel() {
    carousel.scrollTo({
      left: currentIndex * carousel.offsetWidth,
      behavior: 'smooth'
    });
  }
  
  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      currentIndex = Math.max(0, currentIndex - 1);
      updateCarousel();
    });
  }
  
  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      currentIndex = Math.min(cards.length - 1, currentIndex + 1);
      updateCarousel();
    });
  }
});
</script>

