{% comment %}
  Hero Section with Video Background (Desktop) / Image Background (Mobile)
{% endcomment %}

<section class="hero">
    {% comment %} Video for desktop - hidden on mobile {% endcomment %}
    <video class="hero-video" autoplay muted loop playsinline preload="auto" webkit-playsinline>
        <source src="{{ 'video_start.mp4' | file_url }}" type="video/mp4">
    </video>
    
    {% comment %} Lifestyle product image for mobile - hidden on desktop {% endcomment %}
    <div class="hero-background-image">
        <img src="{{ 'aauraofcle' | file_img_url: 'master' }}" alt="" class="hero-bg-img" aria-hidden="true" width="1920" height="1080">
    </div>
    
    <div class="hero-overlay"></div>
    <div class="hero-watermark">
        <img src="{{ 'LOVE_1.png' | file_img_url: 'master' }}" alt="{{ shop.name }}" class="watermark-logo" width="200" height="200">
    </div>
    <div class="container">
        <div class="hero-content">
            <div class="hero-text fade-in">
                <h1 class="hero-title">
                    The Aura of <span class="hero-title-pink">Clean</span>
                </h1>
                <p class="hero-description">
                    Wellness laundry detergent infused with rose quartz microcrystals.
                </p>
                <div class="hero-ctas">
                    <a href="/pages/products" class="btn-primary">Shop</a>
                    <a href="#about" class="btn-secondary" onclick="scrollToSection('about'); return false;">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

