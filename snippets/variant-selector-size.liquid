{% comment %}
  Size / Pods Variant Selector
  Paquetes: 69 Pods, 30 Pods, etc. â€“ botones prominentes como en referencia.
{% endcomment %}

<div class="variant-selector size-selector pods-selector">
  <label class="variant-label size-label-heading">{{ option.name | upcase }}</label>
  <div class="size-buttons">
    {% for value in option.values %}
      {% assign is_selected = false %}
      {% assign cv = product.selected_or_first_available_variant %}
      {% if option.position == 1 and cv.option1 == value %}
        {% assign is_selected = true %}
      {% elsif option.position == 2 and cv.option2 == value %}
        {% assign is_selected = true %}
      {% elsif option.position == 3 and cv.option3 == value %}
        {% assign is_selected = true %}
      {% endif %}
      <button
        type="button"
        class="size-button {% if is_selected %}selected{% endif %}"
        data-option-name="{{ option.name }}"
        data-option-value="{{ value }}"
        aria-label="Select {{ value }}">
        <span class="size-label">{{ value }}</span>
      </button>
    {% endfor %}
  </div>
</div>

