{% comment %}
  Bundle Card - Reusable card for displaying bundle offers
  Parameters:
    - bundle_type: 'try-both', 'citrus-3month', 'fragrance-3month'
    - bundle_title: Title of the bundle
    - bundle_savings: Savings percentage (e.g., "10%", "15%")
    - bundle_savings_amount: Savings amount in cents (from Shopify)
    - bundle_original_price: Original price in cents (from Shopify)
    - bundle_final_price: Final price after discount in cents (from Shopify)
    - bundle_includes: Description of what's included
    - bundle_description: Marketing description
    - bundle_products: Comma-separated product handles
    - bundle_quantities: Comma-separated quantities matching products order
{% endcomment %}

{% assign bundle_type = bundle_type | default: 'scent-free-3month' %}
{% assign bundle_title = bundle_title | default: 'Bundle' %}
{% assign bundle_savings = bundle_savings | default: '15%' %}
{% assign bundle_includes = bundle_includes | default: '' %}
{% assign bundle_description = bundle_description | default: '' %}
{% assign bundle_quantities = bundle_quantities | default: '3' %}

<div class="bundle-card" data-bundle-type="{{ bundle_type }}">
  <div class="bundle-card-header">
    <h3 class="bundle-title">{{ bundle_title }}</h3>
    <div class="bundle-savings-badge">
      Save {{ bundle_savings }}
    </div>
  </div>
  
  <div class="bundle-includes">
    {{ bundle_includes }}
    {% comment %} Free shipping only shown if total after discount > $75 {% endcomment %}
    {% if bundle_final_price and bundle_final_price > 7500 %}
      <span class="bundle-includes-shipping"> + Free Shipping</span>
    {% endif %}
  </div>
  
  {% comment %} Show prices if available from Shopify {% endcomment %}
  {% if bundle_original_price and bundle_final_price %}
    <div class="bundle-price-section">
      <div class="bundle-price-wrapper">
        <span class="bundle-price">{{ bundle_final_price | money }}</span>
        {% if bundle_original_price > bundle_final_price %}
          <span class="bundle-compare-price">{{ bundle_original_price | money }}</span>
        {% endif %}
      </div>
      {% if bundle_savings_amount %}
        <p class="bundle-savings-amount">Save {{ bundle_savings_amount | money }}</p>
      {% endif %}
    </div>
  {% endif %}
  
  <p class="bundle-description">
    {{ bundle_description }}
  </p>
  
  <button 
    type="button" 
    class="btn-add-bundle" 
    data-bundle-type="{{ bundle_type }}"
    data-bundle-products="{{ bundle_products }}"
    data-bundle-quantities="{{ bundle_quantities }}">
    Add Bundle
  </button>
  
  <div class="bundle-subscription-nudge">
    <a href="#subscription-block" class="bundle-nudge-link">Want 20% off? Subscribe quarterly â†’</a>
  </div>
</div>

<style>
.bundle-card {
  background: var(--white, #ffffff);
  border-radius: var(--radius-lg, 16px);
  padding: var(--spacing-xl, 40px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  border: 2px solid var(--light-gray, #e0e0e0);
  transition: all var(--transition-base, 0.3s);
  display: flex;
  flex-direction: column;
  height: 100%;
}

.bundle-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  border-color: var(--primary-pink, #ec008c);
}

.bundle-card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md, 16px);
  gap: var(--spacing-md, 16px);
}

.bundle-title {
  font-family: 'Montserrat', sans-serif;
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  font-weight: 700;
  color: var(--text-dark, #1a1a1a);
  margin: 0;
  flex: 1;
  line-height: 1.3;
}

.bundle-savings-badge {
  background: linear-gradient(135deg, var(--primary-pink, #ec008c) 0%, var(--burgundy, #8b1538) 100%);
  color: var(--white, #ffffff);
  padding: var(--spacing-xs, 6px) var(--spacing-md, 12px);
  border-radius: var(--radius-full, 999px);
  font-size: 0.875rem;
  font-weight: 700;
  white-space: nowrap;
  flex-shrink: 0;
}

.bundle-includes {
  font-size: 1rem;
  color: var(--text-dark, #1a1a1a);
  font-weight: 500;
  margin-bottom: var(--spacing-sm, 12px);
  line-height: 1.5;
}

.bundle-includes-shipping {
  color: var(--primary-pink, #ec008c);
  font-weight: 600;
}

.bundle-price-section {
  margin: var(--spacing-md, 16px) 0;
  padding: var(--spacing-md, 16px) 0;
  border-top: 1px solid var(--light-gray, #e0e0e0);
  border-bottom: 1px solid var(--light-gray, #e0e0e0);
}

.bundle-price-wrapper {
  display: flex;
  align-items: baseline;
  gap: var(--spacing-sm, 12px);
  justify-content: center;
  margin-bottom: var(--spacing-xs, 8px);
}

.bundle-price {
  font-family: 'Montserrat', sans-serif;
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--text-dark, #1a1a1a);
}

.bundle-compare-price {
  font-size: 1.125rem;
  color: var(--text-gray, #999);
  text-decoration: line-through;
}

.bundle-savings-amount {
  font-size: 0.875rem;
  color: var(--primary-pink, #ec008c);
  font-weight: 600;
  text-align: center;
  margin: 0;
}

.bundle-description {
  font-size: 0.9375rem;
  color: var(--text-gray, #666);
  line-height: 1.6;
  margin: var(--spacing-md, 16px) 0;
  flex: 1;
}

.btn-add-bundle {
  width: 100%;
  padding: var(--spacing-md, 16px) var(--spacing-lg, 24px);
  background: var(--primary-pink, #ec008c);
  color: var(--white, #ffffff);
  border: none;
  border-radius: var(--radius-md, 8px);
  font-size: 1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  cursor: pointer;
  transition: all var(--transition-base, 0.3s);
  font-family: 'Montserrat', sans-serif;
  margin-top: auto;
}

.btn-add-bundle:hover {
  background: var(--burgundy, #8b1538);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(236, 0, 140, 0.3);
}

.btn-add-bundle:active {
  transform: translateY(0);
}

.btn-add-bundle:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

.bundle-subscription-nudge {
  margin-top: var(--spacing-md, 16px);
  padding-top: var(--spacing-md, 16px);
  border-top: 1px solid var(--light-gray, #e0e0e0);
  text-align: center;
  font-size: 0.875rem;
}

.bundle-nudge-link {
  color: var(--primary-pink, #ec008c);
  text-decoration: none;
  font-weight: 500;
  transition: color var(--transition-base, 0.3s);
  display: inline-block;
}

.bundle-nudge-link:hover {
  color: var(--burgundy, #8b1538);
  text-decoration: underline;
}

@media (max-width: 768px) {
  .bundle-card {
    padding: var(--spacing-lg, 24px);
  }
  
  .bundle-card-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .bundle-savings-badge {
    align-self: flex-start;
  }
}
</style>

