{% comment %}
  Product Single Card - Enhanced card for individual products
  Shows product with "Add to Cart" button and subscription nudge
{% endcomment %}

{% assign product = product | default: null %}
{% if product == null %}{% break %}{% endif %}

<div class="product-single-card" data-product-id="{{ product.id }}">
  <a href="{{ product.url }}" class="product-single-link">
    <div class="product-single-image-container">
      {% if product.featured_image %}
        <img 
          src="{{ product.featured_image | image_url: width: 800 }}" 
          alt="{{ product.featured_image.alt | default: product.title | escape }}" 
          class="product-single-image"
          loading="lazy"
          width="400"
          height="400">
      {% else %}
        <div class="product-single-image-placeholder">
          <span>No Image</span>
        </div>
      {% endif %}
      
      {% comment %} Product badges {% endcomment %}
      {% if product.tags contains 'most-popular' or product.tags contains 'popular' %}
        <span class="product-single-badge badge-popular">Most Popular</span>
      {% elsif product.tags contains 'sensitive' or product.tags contains 'sensitive-skin' %}
        <span class="product-single-badge badge-sensitive">Sensitive Skin</span>
      {% endif %}
    </div>
    
    <div class="product-single-info">
      <h3 class="product-single-name">{{ product.title }}</h3>
      
      <div class="product-single-specs">
        {% comment %} Get Paks count from metafield or use default 39 {% endcomment %}
        {% assign paks_count = product.metafields.custom.paks_count | default: 39 %}
        <span class="product-single-paks">{{ paks_count }} Paks® • {{ product.price | money }}</span>
      </div>
      
      {% comment %} Price is now shown in specs line, but keep price section for styling consistency {% endcomment %}
      <div class="product-single-price-section" style="display: none;">
        <span class="product-single-price">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="product-single-compare-price">{{ product.compare_at_price | money }}</span>
        {% endif %}
      </div>
    </div>
  </a>
  
  <div class="product-single-actions">
    <button 
      type="button" 
      class="btn-add-to-cart-single" 
      data-product-id="{{ product.id }}"
      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
      data-product-handle="{{ product.handle }}">
      Add to Cart
    </button>
    
    <div class="product-single-subscription-nudge">
      <a href="#subscription-block" class="single-nudge-link">Subscribe & save 15% →</a>
    </div>
  </div>
</div>

<style>
