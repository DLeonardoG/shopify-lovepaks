{% comment %}
  Checkout Page - Pre-checkout Information
  Handle: checkout
  Nota: Shopify tiene su propio checkout, esta página es para información previa
{% endcomment %}

<!-- Progress Bar -->
<div class="checkout-progress">
    <div class="progress-bar">
        <div class="progress-step completed">
            <div class="step-circle">1</div>
            <span>Package</span>
        </div>
        <div class="progress-line completed"></div>
        <div class="progress-step completed">
            <div class="step-circle">2</div>
            <span>Add-ons</span>
        </div>
        <div class="progress-line completed"></div>
        <div class="progress-step active">
            <div class="step-circle">3</div>
            <span>Checkout</span>
        </div>
    </div>
</div>

<!-- Checkout Container -->
<div class="checkout-container">
    <!-- Checkout Form -->
    <div class="checkout-form-section">
        <div class="checkout-header">
            <div class="header-top">
                <a href="/cart" class="back-button" aria-label="Go back">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 12H5M12 19l-7-7 7-7"/>
                    </svg>
                </a>
                <h1>Complete Your Order</h1>
            </div>
            <p>Just a few details to get your wholesale partnership started</p>
        </div>

        <!-- Order Summary -->
        <div class="order-summary-mobile">
            <h3>Order Summary</h3>
            <div class="summary-items" id="summary-items-mobile">
                {% if cart.item_count > 0 %}
                    {% for item in cart.items %}
                        <div class="summary-item">
                            <div class="item-info">
                                <div class="item-name">{{ item.product.title }}</div>
                                {% if item.selling_plan_allocation %}
                                  <p class="selling-plan">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                                  <p class="cart__product-meta">{{ item.selling_plan_allocation.price | money }}</p>
                                {% endif %}
                                <div class="item-label">Quantity: {{ item.quantity }}</div>
                            </div>
                            <div class="item-price">{{ item.line_price | money }}</div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Your cart is empty</p>
                {% endif %}
            </div>
            <div class="summary-totals">
                <div class="summary-row">
                    <span>Subtotal:</span>
                    <span>{{ cart.total_price | money }}</span>
                </div>
                <div class="summary-row total-row">
                    <span>Total:</span>
                    <span>{{ cart.total_price | money }}</span>
                </div>
            </div>
        </div>

        <!-- Continue to Shopify Checkout -->
        <div class="form-actions">
            {% if cart.item_count > 0 %}
                <a href="/checkout" class="btn-primary btn-large" id="proceed-payment-btn">
                    Proceed to Payment
                </a>
            {% else %}
                <a href="/pages/shop-landing" class="btn-primary btn-large">
                    Add Products to Cart
                </a>
            {% endif %}
        </div>
    </div>

    <!-- Order Summary Sidebar -->
    <div class="order-summary-sidebar">
        <div class="summary-card">
            <h3>Order Summary</h3>

            <div class="summary-items" id="summary-items">
                {% if cart.item_count > 0 %}
                    {% for item in cart.items %}
                        <div class="summary-item">
                            <div class="item-info">
                                <div class="item-name">{{ item.product.title }}</div>
                                {% if item.selling_plan_allocation %}
                                  <p class="selling-plan">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                                  <p class="cart__product-meta">{{ item.selling_plan_allocation.price | money }}</p>
                                {% endif %}
                                <div class="item-label">Quantity: {{ item.quantity }}</div>
                            </div>
                            <div class="item-price">{{ item.line_price | money }}</div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p style="text-align: center; color: #999; padding: 20px;">Your cart is empty</p>
                {% endif %}
            </div>

            <div class="summary-totals">
                <div class="summary-row">
                    <span>Subtotal:</span>
                    <span id="subtotal">{{ cart.total_price | money }}</span>
                </div>
                <div class="summary-row total-row">
                    <span>Total:</span>
                    <span id="total">{{ cart.total_price | money }}</span>
                </div>
            </div>

            <div class="trust-badges">
                <div class="trust-item">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    <span>Secure Checkout</span>
                </div>
            </div>
        </div>
    </div>
</div>

