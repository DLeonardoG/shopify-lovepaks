{% comment %}
  Become an Ambassador Page
  Handle: become-an-ambassador
{% endcomment %}

<div class="ambassador-page-container">
    <!-- Hero Banner Section -->
    <section class="ambassador-hero">
        <div class="ambassador-hero-content">
            <div class="ambassador-hero-text">
                <h1 class="ambassador-title">BECOME AN AMBASSADOR</h1>
                <p class="ambassador-description">
                    We're looking for individuals who share our ethos of transformation and excitement. Submit your application and let's grow together!
                </p>
                <a href="#application" class="ambassador-cta-btn">JOIN NOW</a>
            </div>
            <div class="ambassador-hero-image">
                <div class="ambassador-image-wrapper">
                    <img src="{{ 'embasador' | file_img_url: 'master' }}" 
                         alt="Become an Ambassador" 
                         class="ambassador-hero-img"
                         loading="eager"
                         width="600"
                         height="500">
                </div>
            </div>
        </div>
    </section>

    <!-- Application Form Section -->
    <section class="ambassador-application" id="application">
        <div class="container">
            <h2 class="section-title">Apply to Become an Ambassador</h2>
            <p class="section-subtitle">Fill out the form below and we'll get back to you soon!</p>
            
            {% form 'contact', class: 'ambassador-form', id: 'ambassador-form' %}
                {% if form.posted_successfully? %}
                    <div class="form-success">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <p>Thank you for your application! We'll review it and get back to you soon.</p>
                    </div>
                {% endif %}

                {% if form.errors %}
                    <div class="form-errors">
                        <p>Please correct the following errors:</p>
                        <ul>
                            {% for field in form.errors %}
                                <li>{{ field | capitalize }}: {{ form.errors[field] }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <div class="form-row">
                    <div class="form-group">
                        <label for="ambassador-name">Full Name *</label>
                        <input type="text" 
                               id="ambassador-name" 
                               name="contact[name]" 
                               value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                               required>
                    </div>

                    <div class="form-group">
                        <label for="ambassador-email">Email *</label>
                        <input type="email" 
                               id="ambassador-email" 
                               name="contact[email]" 
                               value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                               required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="ambassador-phone">Phone</label>
                        <input type="tel" 
                               id="ambassador-phone" 
                               name="contact[phone]" 
                               value="{% if form.phone %}{{ form.phone }}{% elsif customer.phone %}{{ customer.phone }}{% endif %}">
                    </div>

                    <div class="form-group">
                        <label for="ambassador-social">Social Media Handle</label>
                        <input type="text" 
                               id="ambassador-social" 
                               name="contact[tags]" 
                               placeholder="@yourhandle">
                    </div>
                </div>

                <div class="form-group">
                    <label for="ambassador-message">Tell us about yourself and why you'd like to become an ambassador *</label>
                    <textarea id="ambassador-message" 
                              name="contact[body]" 
                              rows="6" 
                              required
                              placeholder="Share your story, your passion for wellness, and why you'd be a great ambassador for Love Paks...">{% if form.body %}{{ form.body }}{% endif %}</textarea>
                </div>

                <input type="hidden" name="contact[subject]" value="Ambassador Application">

                <button type="submit" class="btn-primary btn-large">Submit Application</button>
            {% endform %}
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="ambassador-benefits">
        <div class="container">
            <h2 class="section-title">Why Become an Ambassador?</h2>
            <div class="benefits-grid">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                            <path d="M2 17l10 5 10-5"></path>
                            <path d="M2 12l10 5 10-5"></path>
                        </svg>
                    </div>
                    <h3>Exclusive Perks</h3>
                    <p>Get access to special discounts, early product launches, and exclusive ambassador-only content.</p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <h3>Community</h3>
                    <p>Join a community of like-minded individuals who share your passion for wellness and transformation.</p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="1" x2="12" y2="23"></line>
                            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                        </svg>
                    </div>
                    <h3>Earning Potential</h3>
                    <p>Earn commissions and rewards for sharing Love Paks with your network and community.</p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                            <line x1="12" y1="22.08" x2="12" y2="12"></line>
                        </svg>
                    </div>
                    <h3>Growth Together</h3>
                    <p>Be part of our journey as we grow and transform the wellness laundry industry together.</p>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
/* Ambassador Page Styles */
.ambassador-page-container {
    padding: 0;
}

/* Hero Section */
.ambassador-hero {
    min-height: 600px;
    background: linear-gradient(135deg, #fff 0%, #fff5f9 100%);
    display: flex;
    align-items: center;
    padding: 80px 0;
    position: relative;
    overflow: hidden;
}

.ambassador-hero-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 clamp(20px, 4vw, 60px);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
}

.ambassador-hero-text {
    z-index: 2;
}

.ambassador-title {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(48px, 6vw, 72px);
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: 24px;
    line-height: 1.1;
    text-transform: uppercase;
    letter-spacing: -0.02em;
}

.ambassador-description {
    font-size: clamp(18px, 2.5vw, 22px);
    color: var(--text-gray);
    line-height: 1.7;
    margin-bottom: 40px;
    max-width: 500px;
}

.ambassador-cta-btn {
    display: inline-block;
    padding: 18px 40px;
    background: var(--text-dark);
    color: white;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    border-radius: 4px;
    transition: all var(--transition-base);
    border: 2px solid var(--text-dark);
}

.ambassador-cta-btn:hover {
    background: var(--primary-pink);
    border-color: var(--primary-pink);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(236, 0, 140, 0.3);
}

.ambassador-hero-image {
    position: relative;
    z-index: 1;
}

.ambassador-image-wrapper {
    width: 100%;
    height: 500px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    position: relative;
}

.ambassador-hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

/* Application Section */
.ambassador-application {
    padding: 100px 0;
    background: white;
}

.ambassador-application .section-title {
    text-align: center;
    font-size: clamp(32px, 4vw, 42px);
    font-weight: 800;
    margin-bottom: 16px;
    color: var(--text-dark);
}

.ambassador-application .section-subtitle {
    text-align: center;
    font-size: 18px;
    color: var(--text-gray);
    margin-bottom: 60px;
}

.ambassador-form {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.form-group label {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-dark);
}

.form-group input,
.form-group textarea {
    padding: 14px 16px;
    border: 1px solid rgba(236, 0, 140, 0.2);
    border-radius: var(--radius-md);
    font-size: 16px;
    font-family: 'Inter', sans-serif;
    transition: all var(--transition-base);
    background: white;
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-pink);
    box-shadow: 0 0 0 3px rgba(236, 0, 140, 0.1);
}

.form-group textarea {
    resize: vertical;
    min-height: 120px;
}

.form-success {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 20px;
    background: #E8F5E9;
    border: 1px solid #4CAF50;
    border-radius: var(--radius-md);
    color: #2E7D32;
    margin-bottom: 24px;
}

.form-success svg {
    flex-shrink: 0;
    color: #4CAF50;
}

.form-errors {
    padding: 16px 20px;
    background: #FFEBEE;
    border: 1px solid #F44336;
    border-radius: var(--radius-md);
    color: #C62828;
    margin-bottom: 24px;
}

.form-errors ul {
    margin: 8px 0 0 0;
    padding-left: 20px;
}

/* Benefits Section */
.ambassador-benefits {
    padding: 100px 0;
    background: linear-gradient(180deg, var(--off-white) 0%, white 100%);
}

.ambassador-benefits .section-title {
    text-align: center;
    font-size: clamp(32px, 4vw, 42px);
    font-weight: 800;
    margin-bottom: 60px;
    color: var(--text-dark);
}

.benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
}

.benefit-card {
    background: white;
    padding: 40px 30px;
    border-radius: var(--radius-xl);
    text-align: center;
    box-shadow: 0 1px 3px rgba(236, 0, 140, 0.08);
    border: 1px solid rgba(236, 0, 140, 0.1);
    transition: all var(--transition-base);
}

.benefit-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 12px rgba(236, 0, 140, 0.15);
    border-color: var(--primary-pink);
}

.benefit-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 24px;
    color: var(--primary-pink);
    display: flex;
    align-items: center;
    justify-content: center;
    background: #FFF5F9;
    border-radius: 50%;
}

.benefit-card h3 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--text-dark);
}

.benefit-card p {
    font-size: 16px;
    color: var(--text-gray);
    line-height: 1.6;
    margin: 0;
}

/* Responsive */
@media (max-width: 1024px) {
    .ambassador-hero-content {
        grid-template-columns: 1fr;
        gap: 40px;
    }

    .ambassador-hero-image {
        order: -1;
    }

    .ambassador-image-wrapper {
        height: 400px;
    }
}

@media (max-width: 768px) {
    .ambassador-hero {
        padding: 60px 0;
        min-height: auto;
    }

    .ambassador-application,
    .ambassador-benefits {
        padding: 60px 0;
    }

    .form-row {
        grid-template-columns: 1fr;
    }

    .benefits-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
}
</style>
