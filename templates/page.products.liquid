{% comment %}
  Products Page - Using Shopify Collections
  Handle: products
  This page displays products from a Shopify collection
  Each product links to its individual product page
{% endcomment %}

<!-- Hero Banner -->
<section class="products-hero-banner">
    <div class="container">
        <div class="products-hero-content fade-in">
            <h1 class="products-hero-title">Shop Love Paks</h1>
            <p class="products-hero-subtitle">Wellness laundry detergent infused with rose quartz microcrystals</p>
        </div>
    </div>
</section>

<!-- Video Section -->
<section class="products-video-section">
    <div class="container">
        <div class="products-video-wrapper">
            <video class="products-video" autoplay muted loop playsinline preload="auto" webkit-playsinline>
                <source src="{{ 'video_start.mp4' | file_url }}" type="video/mp4">
            </video>
            <div class="products-video-overlay"></div>
        </div>
    </div>
</section>

<!-- Products Section - Using Shopify Collection -->
<section class="products-main-section">
    <div class="container">
        <div class="products-header">
            <h2 class="products-section-title">Choose Your Experience</h2>
            <p class="products-section-subtitle">Select the perfect formula for your laundry needs</p>
        </div>

        {% comment %}
          Use collection 'all' or create a 'featured' collection
          You can also use collections['all'] or collections.featured
        {% endcomment %}
        {% assign products_collection = collections.all %}
        {% if collections.featured %}
            {% assign products_collection = collections.featured %}
        {% endif %}

        {% if products_collection.products.size > 0 %}
            <div class="products-grid">
                {% for product in products_collection.products %}
                    {% comment %} Skip Master Case product - it's for wholesale only {% endcomment %}
                    {% unless product.handle == 'master-case' or product.tags contains 'wholesale' or product.tags contains 'master-case' %}
                        <div class="product-card-enhanced fade-in" data-product-id="{{ product.id }}">
                            <a href="{{ product.url }}" class="product-link-wrapper">
                                <div class="product-image-container">
                                    {% if product.featured_image %}
                                        <img src="{{ product.featured_image | image_url: width: 1200 }}" 
                                             alt="{{ product.featured_image.alt | escape }}" 
                                             class="product-main-image"
                                             loading="lazy"
                                             width="600"
                                             height="600">
                                    {% else %}
                                        <img src="{{ 'packaging-normal.jpg' | file_img_url: '1200x' }}" 
                                             alt="{{ product.title | escape }}" 
                                             class="product-main-image"
                                             loading="lazy"
                                             width="600"
                                             height="600">
                                    {% endif %}
                                    
                                    {% comment %} Badge logic {% endcomment %}
                                    {% if product.tags contains 'most-popular' or product.tags contains 'popular' %}
                                        <span class="product-badge-enhanced">Most Popular</span>
                                    {% elsif product.tags contains 'sensitive' or product.tags contains 'sensitive-skin' %}
                                        <span class="product-badge-enhanced badge-sensitive">Sensitive Skin</span>
                                    {% endif %}
                                </div>
                                
                                <div class="product-info-container">
                                    <h3 class="product-name-enhanced">{{ product.title }}</h3>
                                    <p class="product-description-enhanced">
                                        {% if product.description != blank %}
                                            {{ product.description | strip_html | truncatewords: 20 }}
                                        {% else %}
                                            Wellness laundry detergent infused with rose quartz microcrystals.
                                        {% endif %}
                                    </p>
                                    
                                    <div class="product-features-enhanced">
                                        <div class="feature-item">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            <span>Infused with rose quartz microcrystals</span>
                                        </div>
                                        <div class="feature-item">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            <span>Plant-based formula</span>
                                        </div>
                                        <div class="feature-item">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            <span>Works in cold water</span>
                                        </div>
                                        <div class="feature-item">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            <span>Microplastic-free</span>
                                        </div>
                                        <div class="feature-item">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <polyline points="20 6 9 17 4 12"></polyline>
                                            </svg>
                                            <span>Eco-friendly packaging</span>
                                        </div>
                                    </div>
                                    
                                    <div class="product-price-section">
                                        <span class="product-price-enhanced">
                                            {{ product.price | money }}
                                        </span>
                                        {% if product.compare_at_price > product.price %}
                                            <span class="product-compare-price">
                                                {{ product.compare_at_price | money }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                            
                            {% comment %} Add to Cart Button - Direct to product page {% endcomment %}
                            <div class="product-cta-wrapper">
                                <a href="{{ product.url }}" class="btn-add-to-cart">
                                    View Product
                                </a>
                            </div>
                        </div>
                    {% endunless %}
                {% endfor %}
            </div>
        {% else %}
            {% comment %} Fallback: Show static products if collection is empty {% endcomment %}
            <div class="products-grid">
                {% comment %} Citrus Flower Blossom - Fallback {% endcomment %}
                {% assign citrus_product = all_products['citrus-flower-blossom'] %}
                {% if citrus_product %}
                    <div class="product-card-enhanced fade-in">
                        <a href="{{ citrus_product.url }}" class="product-link-wrapper">
                            <div class="product-image-container">
                                <img src="{{ citrus_product.featured_image | default: 'packaging-normal.jpg' | image_url: width: 1200 }}" 
                                     alt="{{ citrus_product.title }}" 
                                     class="product-main-image"
                                     loading="lazy"
                                     width="600"
                                     height="600">
                                <span class="product-badge-enhanced">Most Popular</span>
                            </div>
                            <div class="product-info-container">
                                <h3 class="product-name-enhanced">{{ citrus_product.title }}</h3>
                                <p class="product-description-enhanced">
                                    {{ citrus_product.description | strip_html | truncatewords: 20 }}
                                </p>
                                <div class="product-price-section">
                                    <span class="product-price-enhanced">{{ citrus_product.price | money }}</span>
                                </div>
                            </div>
                        </a>
                        <div class="product-cta-wrapper">
                            <a href="{{ citrus_product.url }}" class="btn-add-to-cart">View Product</a>
                        </div>
                    </div>
                {% endif %}

                {% comment %} Dye & Scent Free - Fallback {% endcomment %}
                {% assign dye_product = all_products['dye-scent-free'] %}
                {% if dye_product %}
                    <div class="product-card-enhanced fade-in">
                        <a href="{{ dye_product.url }}" class="product-link-wrapper">
                            <div class="product-image-container">
                                <img src="{{ dye_product.featured_image | default: 'packaging-piel-sensibles.jpg' | image_url: width: 1200 }}" 
                                     alt="{{ dye_product.title }}" 
                                     class="product-main-image"
                                     loading="lazy"
                                     width="600"
                                     height="600">
                                <span class="product-badge-enhanced badge-sensitive">Sensitive Skin</span>
                            </div>
                            <div class="product-info-container">
                                <h3 class="product-name-enhanced">{{ dye_product.title }}</h3>
                                <p class="product-description-enhanced">
                                    {{ dye_product.description | strip_html | truncatewords: 20 }}
                                </p>
                                <div class="product-price-section">
                                    <span class="product-price-enhanced">{{ dye_product.price | money }}</span>
                                </div>
                            </div>
                        </a>
                        <div class="product-cta-wrapper">
                            <a href="{{ dye_product.url }}" class="btn-add-to-cart">View Product</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</section>

<!-- Benefits Section -->
<section class="products-benefits-section">
    <div class="container">
        <h2 class="benefits-section-title">Why Choose Love Paks</h2>
        <div class="benefits-grid-enhanced">
            <div class="benefit-card-enhanced fade-in">
                <div class="benefit-icon-wrapper">
                    <img src="{{ 'icono-6.png' | file_img_url: '128x' }}" 
                         alt="Eco Friendly" 
                         class="benefit-icon-enhanced"
                         loading="lazy"
                         width="80"
                         height="80">
                </div>
                <h3 class="benefit-title-enhanced">Eco-Friendly Packaging</h3>
                <p class="benefit-description-enhanced">Biodegradable packaging that's kind to our planet.</p>
            </div>
            <div class="benefit-card-enhanced fade-in">
                <div class="benefit-icon-wrapper">
                    <img src="{{ 'icono-5.png' | file_img_url: '128x' }}" 
                         alt="Stain Removal" 
                         class="benefit-icon-enhanced"
                         loading="lazy"
                         width="80"
                         height="80">
                </div>
                <h3 class="benefit-title-enhanced">Cleans Stubborn Stains</h3>
                <p class="benefit-description-enhanced">Powerful patented formula proven to remove the toughest stains.</p>
            </div>
            <div class="benefit-card-enhanced fade-in">
                <div class="benefit-icon-wrapper">
                    <img src="{{ 'icono-4.png' | file_img_url: '128x' }}" 
                         alt="Rose Quartz" 
                         class="benefit-icon-enhanced"
                         loading="lazy"
                         width="80"
                         height="80">
                </div>
                <h3 class="benefit-title-enhanced">Contains Rose Quartz</h3>
                <p class="benefit-description-enhanced">Microcrystals align your heart chakra and enhance your aura.</p>
            </div>
            <div class="benefit-card-enhanced fade-in">
                <div class="benefit-icon-wrapper">
                    <img src="{{ 'icono-3.png' | file_img_url: '128x' }}" 
                         alt="Cold Water" 
                         class="benefit-icon-enhanced"
                         loading="lazy"
                         width="80"
                         height="80">
                </div>
                <h3 class="benefit-title-enhanced">Works in Cold Water</h3>
                <p class="benefit-description-enhanced">Effective in cold water, saving energy and protecting fabrics.</p>
            </div>
        </div>
    </div>
</section>

<style>
/* Products Page Hero Banner */
.products-hero-banner {
    background: linear-gradient(135deg, var(--primary-pink) 0%, var(--burgundy) 100%);
    padding: clamp(60px, 8vw, 120px) var(--spacing-md);
    text-align: center;
    color: var(--white);
    position: relative;
    overflow: hidden;
}

.products-hero-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('{{ "LOVE_1.png" | file_img_url: "master" }}') center/cover;
    opacity: 0.05;
    pointer-events: none;
}

.products-hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
}

.products-hero-title {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    margin-bottom: var(--spacing-sm);
    color: var(--white);
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.products-hero-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    opacity: 0.95;
    font-weight: 400;
    line-height: 1.6;
}

/* Video Section */
.products-video-section {
    padding: 0;
    background: var(--off-white);
}

.products-video-wrapper {
    position: relative;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--light-gray);
}

.products-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.products-video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.1) 100%);
    pointer-events: none;
}

/* Products Main Section */
.products-main-section {
    padding: var(--spacing-xxl) var(--spacing-md);
    background: var(--white);
}

.products-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.products-section-title {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: var(--spacing-sm);
}

.products-section-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--text-gray);
}

.products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-xl);
    max-width: 1400px;
    margin: 0 auto;
}

/* Enhanced Product Card */
.product-card-enhanced {
    background: var(--white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    border: 1px solid rgba(236, 0, 140, 0.1);
    display: flex;
    flex-direction: column;
}

.product-card-enhanced:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
}

.product-link-wrapper {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.product-image-container {
    position: relative;
    width: 100%;
    padding-top: 100%;
    overflow: hidden;
    background: var(--light-gray);
}

.product-main-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
}

.product-card-enhanced:hover .product-main-image {
    transform: scale(1.05);
}

.product-badge-enhanced {
    position: absolute;
    top: var(--spacing-md);
    right: var(--spacing-md);
    background: var(--primary-pink);
    color: var(--white);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: var(--shadow-md);
    z-index: 2;
}

.product-badge-enhanced.badge-sensitive {
    background: var(--accent-blue);
}

.product-info-container {
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.product-name-enhanced {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: var(--spacing-sm);
}

.product-description-enhanced {
    font-size: 1rem;
    color: var(--text-gray);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
}

.product-features-enhanced {
    margin: var(--spacing-md) 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.feature-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 0.9375rem;
    color: var(--text-dark);
}

.feature-item svg {
    flex-shrink: 0;
    color: var(--primary-pink);
    stroke-width: 3;
}

.product-price-section {
    margin: var(--spacing-md) 0;
    padding: var(--spacing-md) 0;
    border-top: 2px solid var(--light-gray);
    border-bottom: 2px solid var(--light-gray);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.product-price-enhanced {
    font-family: 'Montserrat', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-dark);
}

.product-compare-price {
    font-size: 1.5rem;
    color: var(--text-gray);
    text-decoration: line-through;
}

.product-cta-wrapper {
    padding: 0 var(--spacing-lg) var(--spacing-lg);
    margin-top: auto;
}

.btn-add-to-cart {
    width: 100%;
    padding: var(--spacing-md) var(--spacing-lg);
    background: var(--primary-pink);
    color: var(--white);
    border: none;
    border-radius: var(--radius-md);
    font-size: 1.125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: 'Montserrat', sans-serif;
    text-decoration: none;
    display: block;
    text-align: center;
}

.btn-add-to-cart:hover {
    background: var(--burgundy);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.btn-add-to-cart:active {
    transform: translateY(0);
}

/* Benefits Section */
.products-benefits-section {
    padding: var(--spacing-xxl) var(--spacing-md);
    background: var(--off-white);
}

.benefits-section-title {
    font-family: 'Montserrat', sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    text-align: center;
    color: var(--text-dark);
    margin-bottom: var(--spacing-xl);
}

.benefits-grid-enhanced {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    max-width: 1200px;
    margin: 0 auto;
}

.benefit-card-enhanced {
    background: var(--white);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    text-align: center;
    box-shadow: var(--shadow-sm);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
}

.benefit-card-enhanced:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.benefit-icon-wrapper {
    margin-bottom: var(--spacing-md);
    display: flex;
    justify-content: center;
}

.benefit-icon-enhanced {
    width: 80px;
    height: 80px;
    object-fit: contain;
}

.benefit-title-enhanced {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: var(--spacing-xs);
}

.benefit-description-enhanced {
    font-size: 0.9375rem;
    color: var(--text-gray);
    line-height: 1.6;
}

/* Mobile Responsive */
@media (max-width: 768px) {
    .products-hero-banner {
        padding: clamp(40px, 6vw, 80px) var(--spacing-md);
    }
    
    .products-main-section {
        padding: var(--spacing-xl) var(--spacing-md);
    }
    
    .products-grid {
        grid-template-columns: 1fr;
        gap: var(--spacing-lg);
    }
    
    .product-info-container {
        padding: var(--spacing-md);
    }
    
    .benefits-grid-enhanced {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-md);
    }
    
    .benefit-icon-enhanced {
        width: 64px;
        height: 64px;
    }
}

@media (max-width: 480px) {
    .benefits-grid-enhanced {
        grid-template-columns: 1fr;
    }
    
    .products-video-wrapper {
        aspect-ratio: 4 / 3;
    }
}
</style>
